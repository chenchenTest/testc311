	padding-left:100px;
	font-family: "微软雅黑";
}

#demo2 tr {
	height:60px;
}


#demo2 p {
	margin: 0;
	padding:0;
	text-indent: 0;
}

#demo2 .form-submit {
	background-color: #4D9AC9;
}