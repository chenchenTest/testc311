#demo1 {
	font-family: "微软雅黑";
	padding-left:100px;
}

#demo1 p {
	margin: 0;
	padding:0;
	text-indent: 0;
}

#demo1 td {
	padding:20px auto;
}

.form-title {
	color: #4D98C8;
	font-family: serif, fantasy;
	font-size: 18px;
	line-height: 34px;
	font-weight: bold;
	border-bottom: 1px solid #F3F3F3;
	display: block;
	width: 500px;
}

.form-tips {
	color: #9AA1AA;
    line-height: 50px;
    text-align: center;
    display: block;
    width: 500px;
}

.form-field {
	color:#000000;
}

.form-text {
	background-color: #FFFFFF;
    box-shadow: 0 0 3px #DEDEDE;
    font-size: 16px;
    height: 34px;
    padding-left:6px;
    line-height: 30px;
    transition: background-color 1s ease 0s;
    width: 280px;
    border: 1px solid #DFDFDF;
    border-radius: 3px 3px 3px 3px;
}

.form-remember {
	font-size: 12px;
	color: #9AA1AA;
}

.form-submit {
	background-color: #A1CEFD;
    border: medium none;
    color: #FFFFFF;
    cursor: pointer;
    font-weight: bold;
    min-width: 60px;
    padding: 6px 10px;
    margin-bottom:4px;
}

.form-link {
	color: #3987CB;
    font-size: 12px;
    text-decoration: none;
}

/* .input-td {
	padding: 0 14px;
} */

.align-right {
	text-align: right;
}

.color-blue {
	color:#4196C7;
}

