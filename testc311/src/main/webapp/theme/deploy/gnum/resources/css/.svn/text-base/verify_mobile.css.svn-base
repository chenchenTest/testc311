.country-list button {
    height: 3em;
    width: 100%;
    border-color: #ffffff;
}

.country-list .content {
    color: #3e3e3e;
    font-family: 'Lato-Regular';
    font-size: 1.285714285714286em;
}

.country-list .dropdown-menu {
    background-color: #333333;
    width: 364%;
    position: relative;
}

.country-list .dropdown-menu>li>a {
    color: #FFFFFF;
    font-family: 'Lato-Regular';
    font-size: 1.428571428571429em;
    line-height: 1em;
}

.country-list .dropdown-menu>li>a:hover {
    color: #2DCBC7;
    font-size: 1.285714285714286em;
    background-color: #333333;
    line-height: 1.111111111111111em;
}
