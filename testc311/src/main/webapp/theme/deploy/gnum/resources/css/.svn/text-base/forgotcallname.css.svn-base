.forget-password-area .title{
	color:#3e3e3e;
	font-size: 52px;
	font-family: "lato-light";
	font-weight: lighter;
}

.forget-password-area h2{
	margin-top: 158px;
	margin-bottom: 20px;
}

.forget-password-area .emailInput{
	margin-top: 52px;
	margin-bottom: 20px;
	color:#c8c8c8;
	font-size: 18px;
}

.forget-password-area #email{
	height: 60px;
}

.forget-password-area .btn-send{
	height: 68px;
	font-size: 22px;
	color:#ffffff;
}

.forgetCallnameEmail-area .title{
	color:#3e3e3e;
	font-size: 52px;
	font-family: "lato-light";
	font-weight: lighter;
}

.forgetCallnameEmail-area h2{
	margin-top: 157px;
	margin-bottom: 20px;
}

.forgetCallnameEmail-area .btn-send{
	height: 68px;
	font-size: 22px;
	color:#ffffff;
	padding: 14px 12px;
}

.forget-password-area #errorBox{
	text-align: center;
	color: #e45858;
	font-size: 14px;
	margin-top: 32px;
}



@media screen and  (max-width: 768px){
	.forget-password-area .title{
	color:#3e3e3e;
	font-size: 36px;
	font-family: "lato-light";
	font-weight: lighter;
	margin-top: 85px;
	}
	
	.forget-password-area .emailInput{
	margin-top: 10px;
	margin-bottom: 6px;
	color:#c8c8c8;
	font-size: 18px;
	}
	
	.forget-password-area {
		padding-bottom: 60px;
	}
	
	.forgetCallnameEmail-area .title{
	color:#3e3e3e;
	font-size: 36px;
	font-family: "lato-light";
	font-weight: lighter;
	margin-top: 80px;
	}
	
	.forgetCallnameEmail-area{
		padding-bottom: 60px;
	}
	
}