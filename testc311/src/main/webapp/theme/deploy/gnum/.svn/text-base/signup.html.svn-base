<!DOCTYPE html>
<html lang="en">

<head>

    [#include "common/common-meta.html" ]
    <title>GNum Sign Up</title>
    [#include "common/common-css.html" ]
    <link rel="stylesheet" type="text/css" href="${res!}/resources/css/signup.css">
</head>
<body>
[#include "common/google-tag-manager.html" /]
<!--head begin-->
<div id="head">
    [#include "common/head.html" ]
</div>
<!--head end-->
<div class="container-fluid signup-area">
    <div class="row">
        <div class="col-md-8 col-lg-8 center-grid">
            <h2>Sign Up</h2>
            <hr>
            <!--form for mobile-->
            <div class="row visible-xs-block">
                <div class="col-md-10 col-lg-6 center-grid">
                    <form class="signup-form mobile-signup-form" action="${res!}/register/" method="post" autocomplete="false">
                        <!--disable chrome autofill function-->
                        <input type="text" style="display:none">
                        <input type="password" style="display:none">
                        <!--end-->
                        <input type="hidden" name="rateId" value="gr_proa">
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <label for="nickname" class="sr-only">callName</label>
                                <input type="text" class="form-control" id="nickname" name="nickname"
                                       placeholder="gnum.com/CallName">
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <label for="password" class="sr-only">displayName</label>
                                <input type="text" class="form-control" id="displayName" name="name"
                                       placeholder="Display Name">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <label for="password" class="sr-only">password</label>
                                <input type="password" class="form-control" id="password" name="password"
                                       placeholder="Password" autocomplete="off">
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <div class="input-group">
                                    [@gnum.countrycode class="input-group-btn countryCode"/]
                                    <span class="input-group-gap"></span>
                                    <input type="text" tabindex="6" class="form-control" id="newMobile"
                                           name="phonenumber"
                                           placeholder="Mobile Number">
                                </div>
                            </div>
                        </div>
                        <!-- <div class="form-group">
                             <label for="confirmPassword" class="sr-only">confirm password</label>
                             <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password">
                         </div>-->
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <div class="input-group">
                                <span class="input-group-addon">
                                    <button class="btn btn-default btn-custom btn-a otp-btn waitBtn">Send OTP</button>
                                </span>
                                    <span class="input-group-gap"></span>
                                    <input type="text" tabindex="6" class="form-control" id="otp" name="otp"
                                           placeholder="OTP">
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <label for="email" class="sr-only">email</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                            </div>
                        </div>
                        <div class="row signup-form-group">
                            <div class="col-xs-12 col-md-6">
                                <button type="submit" class="btn btn-default btn-custom btn-a signup-btn">sign up
                                </button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
            <!--form for pc-->
            <div class="row hidden-xs">
                <div class="col-sm-12 col-md-12 col-lg-10 center-grid">
                    <form class="signup-form pc-signup-form" action="${res!}/register/" method="post" autocomplete="false">
                        <!--disable chrome autofill function-->
                        <input type="text" style="display:none">
                        <input type="password" style="display:none">
                        <!--end-->
                        <input type="hidden" name="rateId" value="gr_proa">
                        <div class="row">
                            <div class="col-sm-6 col-md-6">
                                <label for="pc-nickname">gnum.com/<span>call name</span></label>
                                <input type="text" class="form-control" id="pc-nickname" name="nickname" tabindex="1"
                                       placeholder="gnum.com/CallName">
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <label for="pc-newMobile">new mobile</label>

                                <div class="input-group">
                                    [@gnum.countrycode class="input-group-btn countryCode"/]
                                    <span class="input-group-gap"></span>
                                    <input type="text" tabindex="6" class="form-control" id="pc-newMobile"
                                           name="phonenumber" tabindex="2"
                                           placeholder="Mobile Number">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-6">
                                <label for="pc-displayName" class="sr-only">displayName</label>
                                <input type="text" class="form-control" id="pc-displayName" name="name" tabindex="3"
                                       placeholder="Display Name">
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="input-group">
                                <span class="input-group-addon">
                                    <button class="btn btn-default btn-custom btn-a otp-btn waitBtn">Send OTP</button>
                                </span>
                                    <span class="input-group-gap"></span>
                                    <input type="text" tabindex="6" class="form-control" id="pc-otp" name="otp" tabindex="4"
                                           placeholder="OTP">
                                </div>
                            </div>
                        </div>
                        <!-- <div class="form-group">
                             <label for="confirmPassword" class="sr-only">confirm password</label>
                             <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password">
                         </div>-->
                        <div class="row">
                            <div class="col-sm-6 col-md-6">
                                <label for="pc-password" class="sr-only">password</label>
                                <input type="password" class="form-control" id="pc-password" name="password" tabindex="5"
                                       placeholder="Password">
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <label for="email" class="sr-only">email</label>
                                <input type="email" class="form-control" id="pc-email" name="email" tabindex="6" placeholder="Email">
                            </div>
                        </div>
                        <div class="row signup-form-group">
                            <div class="col-sm-offset-4 col-sm-4 col-md-offset-4 col-md-4">
                                <button type="submit" class="btn btn-default btn-custom btn-a signup-btn" tabindex="7">sign up
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6 center-grid text-center">
                <ul id="pc-errorBox"></ul>
            </div>
            <ul id="errorBox"></ul>
            <div class="col-md-12 col-lg-12 text-center form-tips">
                <p>By clicking Sign Up you agree to the <a href="${res!}/terms/">Terms&amp;Conditions</a> and <a href="${res!}/privacy/">Privacy
                    Policy</a></p>
            </div>
        </div>
    </div>
</div>
<!--foot begin-->
<div class="foot">
    [#include "common/foot.html" ]
</div>
<!--foot end-->
[#include "common/common-js.html" ]
[#include "common/common-js-validate.html" ]
<script type="application/javascript">
    $(function () {
        //初始化下拉选
        $(".dropdown").dropdownMenu();
        //pc 下实时同步显示callname的label
        $("#pc-nickname").off().keyup(function () {
            var currentInput = $(this).val();
            var $nicknameLabel = $("label[for='pc-nickname'] span");
            currentInput.length==0?$nicknameLabel.text("callname"):$nicknameLabel.text(currentInput);
        });
    });
    $(function () {
        /*otp wait button for mobile*/
        $(".mobile-signup-form .waitBtn").waitButton({
            preAction: function () {
                if (!$('#newMobile').valid()) {
                    this.cancel = true;
                    return;
                }
                var mobile = $("#newMobile").val();
                var countryCode = stringUtils.removePlus($(".mobile-signup-form .countryCode button:first").text());
                sendOTP(mobile, countryCode);
            }
        });
        /*otp wait button for pc*/
        $(".pc-signup-form .waitBtn").waitButton({
            preAction: function () {
                if (!$('#pc-newMobile').valid()) {
                    this.cancel = true;
                    return;
                }
                this.cancel = false;
                var mobile = $("#pc-newMobile").val();
                var countryCode = stringUtils.removePlus($(".pc-signup-form .countryCode button:first").text());
                sendOTP(mobile, countryCode);
            }
        });
            $('input[name="password"]').attr('required', 'required');
            $('input[name="email"]').attr('required', 'required');
    });
   /* $(window).ready(function () {
        setTimeout(function() {
            $('input[name="password"]').val('');
            $('input[name="email"]').val('');
            $('input[name="name"]').val('');
            $('input[name="otp"]').val('');
        },50);

    });*/
</script>
</body>

</html>
